}
.basicInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
}
.userHead{
  margin:0 30rpx 0 56rpx;
}
.userHead image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}
.name{
  font-size: 42rpx;
  font-weight: 600;
}
.age{
  font-weight: 36rpx;
