/* pages/msg/msg.wxss */
.unread{
  background: red;
  color: white;
  height: 38rpx;
  width: 38rpx;
  border-radius: 19rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 38rpx;
}
.container{
  width: 100%;
}
.msg{
  background-color: white;
  height: 140rpx;
  width: 96%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:20rpx 4% 10rpx 0;
  position: relative;
}
image{
  width: 128rpx;
  height: 128rpx;
  border-radius: 64rpx;
}
.msg-l{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
}
.personal{
  font-size: 38rpx;
  font-weight: 600;
}
page {
  background-color: #e6e9ec;
  padding-top:36rpx;
}
button::after{
  border: none;
  border-radius: 0;
  /* background-color: white; */
}
button{
  border-radius: 0;
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  top:0;
  left: 0;
  background-color: transparent;
}
.clickMsg{
  background-color: rgba(0,0,0,0.1)
}
