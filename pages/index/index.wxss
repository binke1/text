.container {
  margin-top: 10rpx;
  width: 100%;
  /* height:926rpx; */
  display: flex;
  flex-direction: row;
  position: relative;
  justify-content: center;
  align-items: center;
}
page{
  overflow: hidden;
  width:750rpx;
}
view {
  font-size: 12px;
}
.mode{
  position: absolute;
  margin-top:10;
  width: 100%;
  height: 100%;
  background-color: transparent;
  z-index:9;
}
.common {
  position: absolute;
  margin-top:10%;
  box-shadow: 10px 15px 10px 5px rgba(0, 0, 0, 0.1);
  border-radius: 5px;
  background-color: #00c280;
  overflow: hidden;
  /* transition: all 0.2s linear; */
}

.common image {
  width: 100%;
  height: 100%;
}

