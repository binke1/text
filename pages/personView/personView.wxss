/* pages/personView/personView.wxss */
@import './../../utils/wxss/iconfont.wxss';

.shuffling {
  width: 100%;
  height: 800rpx;
}

.shuffling image {
  width: 100%;
  height: 100%;
}

.shuffling swiper {
  height: 100%;
}

.info {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  justify-content: space-between;
  font-size: 26rpx;
  color: #515355;
}

.iconfont {
  margin-right: 6rpx;
}

.infoMain {
  display: flex;
  fallback: row;
  align-items: flex-end;
}

.name {
  color: #000;
  font-size: 56rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.content {
  padding: 50rpx 40rpx 0 40rpx;
}

.age {
  font-size: 36rpx;
  color: #515355;
}

.school {
  font-weight: 800;
  margin-top: 20rpx;
  font-size: 34rpx;
}

.professional {
  font-size: 26rpx;
}

.sapceing {
  margin: 30rpx 0;
}

.labelTitle {
  font-size: 36rpx;
  color: #515355;
}

.labelname {
  border-radius: 4rpx;
  background-color: #84b9f2;
  padding: 5rpx;
  font-size: 28rpx;
  color: white;
  margin: 6rpx;
  font-weight: 600;
}

.twoSize {
  font-size: 40rpx;
  font-weight: 500;
}

.twoContent {
  color: #000;
  font-size: 30rpx;
  margin-top: 30rpx;
}

.record {
  margin-right: 20rpx;
}